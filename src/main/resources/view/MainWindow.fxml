<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="450.0"
            style="-fx-background-color: #2e2e2e;"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="frontend.MainWindow">
<children>
<TextField fx:id="userInput"
           layoutY="558.0"
           onAction="#handleUserInput"
           prefHeight="41.0"
           prefWidth="350.0"
           AnchorPane.bottomAnchor="1.0"
           style="-fx-padding: 5px;
                          -fx-border-color: #444444;
                          -fx-border-radius: 5px;
                          -fx-background-color: #3b3b3b;
                          -fx-text-fill: white;"
/>
<Button fx:id="sendButton"
        layoutX="350.0"
        layoutY="558.0"
        mnemonicParsing="false"
        onAction="#handleUserInput"
        prefHeight="41.0"
        prefWidth="100.0"
        text="Send"
        style="-fx-background-color: #007bff;
                       -fx-text-fill: white;
                       -fx-background-radius: 5px;"
/>
<ScrollPane fx:id="scrollPane"
            hbarPolicy="NEVER"
            vbarPolicy="ALWAYS"
            layoutY="10.0"
            prefHeight="550.0"
            prefWidth="450.0"
            fitToWidth="true"
            style="-fx-border-color: #444444;
                           -fx-background-color: #2e2e2e;"
>
<content>
    <VBox fx:id="dialogContainer"
          prefHeight="552.0"
          prefWidth="450.0"
          spacing="10.0"
          style="-fx-padding: 10px;
                             -fx-background-color: #2e2e2e;"
    />
</content>
</ScrollPane>
        </children>
        </AnchorPane>
